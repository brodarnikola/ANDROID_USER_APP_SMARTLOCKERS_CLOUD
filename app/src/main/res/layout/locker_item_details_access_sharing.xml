<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:id="@+id/clMain" >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llLockerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/ivNotificationPicture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lnLockerNameAddress"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"  />

        <LinearLayout
            android:id="@+id/lnLockerNameAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivEditLocker"
            app:layout_constraintHorizontal_weight="6.5"
            app:layout_constraintStart_toEndOf="@+id/ivNotificationPicture"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="10dp">

            <hr.sil.android.myappbox.fonts.view.fonts.TextViewWithFont
                android:id="@+id/tvLockerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:textColor="?attr/thmDescriptionTextColor"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeMedium"
                android:textSize="?attr/thmListTitleTextSize" />

            <hr.sil.android.myappbox.fonts.view.fonts.TextViewWithFont
                android:id="@+id/tvNotificationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:textColor="?attr/thmDescriptionTextColor"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeRegular"
                android:textSize="?attr/thmListSubTitleTextSize"  />

        </LinearLayout>


        <ImageView
            android:id="@+id/ivEditLocker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lnLockerNameAddress"
            android:paddingLeft="20dp"  />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
