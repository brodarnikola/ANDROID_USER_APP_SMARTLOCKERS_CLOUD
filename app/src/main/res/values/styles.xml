    <style name="ZwickTheme" parent="Theme.AppCompat.Light" />

    <style name="ZwickTheme.NoActionBar" parent="ZwickTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!--    <item name="android:windowBackground">@drawable/bg_home_zwick</item>-->

    <style name="ZwickTheme.LoginRegister" parent="ZwickTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ZwickTheme.MainTheme" parent="ZwickTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ZwickTheme.ErrorEdittext" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="ZwickTheme.SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccentZwick</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>

        <!-- inactive track color -->
        <item name="android:colorForeground">@color/colorPrimaryDarkZwick</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

<!--    <style name="Theme.Github.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >-->
<!--        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
<!--    </style>-->

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="Theme.Github.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
