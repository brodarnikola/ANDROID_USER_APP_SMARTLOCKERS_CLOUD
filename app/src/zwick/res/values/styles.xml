    <style name="ZwickTheme.SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccentZwick</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>

        <!-- inactive track color -->
        <item name="android:colorForeground">@color/colorPrimaryDarkZwick</item>
    </style>

