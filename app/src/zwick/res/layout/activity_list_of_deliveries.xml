<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.sil.android.flexilockerapp.view.ui.activities.collect_parcel.ListOfDeliveriesActivity"
    android:background="?attr/thmLoginBackground">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize" >

        <myappbox.fonts.view.fonts.TextViewWithFont
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rvListOfDeliveries"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="0.5"

            android:textAllCaps="true"
            android:text="@string/list_of_deliveries_cpl"
            android:textSize="?attr/thmTitleTextSize"
            android:letterSpacing="?attr/thmTitleLetterSpacing"

            android:textColor="?attr/thmTitleTextColor"
            app:font_name="?attr/thmMainFontName"
            app:font_type="?attr/thmMainFontTypeMedium"

            android:layout_gravity="center"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListOfDeliveries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/llBottom"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="8.4"/>

        <ProgressBar
            android:id="@+id/progressDeliveries"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvListOfDeliveries"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1.1" >

            <myappbox.fonts.view.fonts.TextViewWithFont
                android:id="@+id/tvDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/expired_deliveries_description"

                android:textColor="?attr/thmTitleTextColor"
                app:font_name="?attr/thmMainFontName"
                app:font_type="?attr/thmMainFontTypeMedium"

                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>